generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @id @unique
  displayName     String
  profileImageURL String
  chat_list       Chat[]
  messages        Message[]

  friends          User[] @relation("UserFriends")
  symmetricFriends User[] @relation("UserFriends")
}

